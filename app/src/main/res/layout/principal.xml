<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="2">

    <GridLayout
        android:id="@+id/background_chron"
        android:orientation="vertical"
        android:layout_columnSpan="2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cicles"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Exercise"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Exercise Time"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Rest Time"
            />

        <TextView
            android:id="@+id/number_executed_cicles"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-----------------"
            />
        <TextView
            android:id="@+id/number_executed_exercises"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-----------------"
            />
        <TextView
            android:id="@+id/executed_exercise_time"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-----------------"
            />
        <TextView
            android:id="@+id/executed_rest_time"
            android:layout_gravity="fill_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="-----------------"
            />

    </GridLayout>

    <Chronometer
        android:id="@+id/chronometer"

        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:format="Total (%m:%s)"
        android:text="Chronometer"
        android:textSize="50sp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/start_button"
                android:layout_width="95sp"
                android:layout_height="wrap_content"
                android:text="Start" />

            <Button
                android:id="@+id/pause_button"
                android:layout_width="95sp"
                android:layout_height="wrap_content"
                android:text="Pause" />

            <Button
                android:id="@+id/settings_button"
                android:layout_width="95sp"
                android:layout_height="wrap_content"
                android:text="Settings"
                />
        </LinearLayout>


    </RelativeLayout>

</GridLayout>